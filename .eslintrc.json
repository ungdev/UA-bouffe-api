{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "eol-last": "off",
    "linebreak-style": [
      "warn",
      "windows"
    ],
    "object-curly-newline": "off",
    "no-param-reassign": "off",
    "brace-style": [
      "warn",
      "stroustrup"
    ],
    "no-plusplus": "off"
  }
}